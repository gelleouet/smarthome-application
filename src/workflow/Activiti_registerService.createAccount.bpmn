  <process id="Activiti_registerService.createAccount" name="Activiti_registerService.createAccount" isExecutable="true">
    <startEvent id="startevent1" name="Start"></startEvent>
    <scriptTask id="scripttask1" name="Préparation des données" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>def user = smarthome.security.User.findByUsername(context.arg0.username)
execution.setVariable("user", user)</script>
    </scriptTask>
    <sequenceFlow id="flow10" name="Code d'enregistrement ?" sourceRef="startevent1" targetRef="scripttask1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${ context.result != null }]]></conditionExpression>
    </sequenceFlow>
    <scriptTask id="scripttask2" name="Envoi mail utilisateur" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>Map email = [title: 'Activation compte', subject: 'Activation compte', to: context.result.username,
	bcc: 'gregory.elleouet@gmail.com,ronan.jouve@alec-rennes.org,olivier.roche@alec-rennes.org']
def appCode = grailsApplication.metadata['app.code']
	
email.message = """
	&lt;p&gt;Bonjour $user.prenomNom,&lt;/p&gt;
	&lt;br/&gt;
	&lt;p&gt;Vous avez fait une demande pour créer un compte &lt;strong&gt;$appCode&lt;/strong&gt; avec l'adresse suivante &lt;strong style="text-decoration:none; color:#47bac1;"&gt;$context.arg0.username&lt;/strong&gt;.&lt;/p&gt;
	&lt;p&gt;Veuillez cliquer sur le lien suivant : &lt;a style="text-decoration:none;color:#47bac1;font-weight:bold;" href="$context.result.serverUrl"&gt;-- activation de votre compte --&lt;/a&gt;&lt;/p&gt;
	&lt;p&gt;Vous serez alors redirigé vers l'application Web et vous pourrez vous connecter avec vos identifiants.&lt;/p&gt;
"""

notificationService.sendEmail(email)</script>
    </scriptTask>
    <sequenceFlow id="flow11" sourceRef="scripttask1" targetRef="scripttask2"></sequenceFlow>
    <endEvent id="endevent1" name="End"></endEvent>
    <sequenceFlow id="flow12" sourceRef="scripttask2" targetRef="endevent1"></sequenceFlow>
    <textAnnotation id="textannotation1">
      <text>Workflow : User Create Account</text>
    </textAnnotation>
